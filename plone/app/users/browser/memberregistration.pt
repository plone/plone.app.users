<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      metal:use-macro="context/prefs_main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:main fill-slot="prefs_configlet_main">

  <header>
    <h1 class="documentFirstHeading"
        i18n:translate="">Users and Groups</h1>

    <div metal:use-macro="context/global_statusmessage/macros/portal_message">
      Portal status message
    </div>

    <ul class="nav nav-pills">
      <li class="nav-item">
        <a href="${portal_url}/@@usergroup-userprefs"
            class="nav-link active"
            i18n:translate="label_users">Users</a>
      </li>
      <li class="nav-item">
        <a href="${portal_url}/@@usergroup-groupprefs"
            class="nav-link"
            i18n:translate="label_groups">Groups</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active"
            href="${portal_url}/@@usergroup-controlpanel"
            i18n:translate="label_usergroup_settings">Settings</a>
      </li>
      <li class="nav-item">
        <a href="${portal_url}/@@member-fields" class="nav-link"
            i18n:translate="label_member_fields">Member fields</a>
      </li>
    </ul>
  </header>
  <article id="content">
    <metal:b use-macro="context/@@ploneform-macros/titlelessform" />
  </article>

</metal:main>
</body>
</html>
